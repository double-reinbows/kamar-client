<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/restaurant_confirmation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/item_img"
        android:textSize="17sp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/restaurant_confirmation_sub_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/restaurant_confirmation_text"
        android:layout_toRightOf="@+id/item_img"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/restaurant_confirmation_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/item_note"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/item_img"
        android:layout_below="@+id/restaurant_confirmation_sub_price"/>
</RelativeLayout>
