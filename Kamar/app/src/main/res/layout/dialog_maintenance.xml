<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorNavBar"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/guestTextColor"
        android:text="@string/tellus_message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/chat_grey" />

        <EditText
            android:id="@+id/maintenance_message_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/maintenance_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maintenance_cancel"
            android:text="@string/negative"
            android:background="@drawable/redbutton"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maintenance_confirm"
            android:text="@string/positive"
            android:background="@drawable/redbutton"
            android:textColor="@android:color/white"
            android:layout_marginLeft="375dp"/>

    </LinearLayout>

</LinearLayout>