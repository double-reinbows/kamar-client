<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    tools:context=".activity.staff.CheckGuestInFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guest_checkin"
        android:textSize="40dp"
        android:textColor="@color/black"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/tableLayout">
        <TableRow
            android:padding="4dp">
            <EditText
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:layout_width="800dp"
                android:layout_height="40dp"
                android:background="@drawable/text_view_border"
                android:inputType="textCapSentences"
                android:id="@+id/guest_first_name"
                android:hint="@string/guest_first_name"/>
        </TableRow>
        <!--
        <TableRow
            android:padding="4dp">
            <EditText
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:layout_width="800dp"
                android:layout_height="40dp"
                android:background="@drawable/text_view_border"
                android:inputType="textCapSentences"
                android:id="@+id/guest_last_name"
                android:hint="@string/guest_last_name"/>
        </TableRow> -->
        <TableRow
            android:padding="4dp">
            <EditText
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:layout_width="800dp"
                android:layout_height="40dp"
                android:background="@drawable/text_view_border"
                android:inputType="textEmailAddress"
                android:id="@+id/guest_email"
                android:hint="@string/guest_email"/>
        </TableRow>
        <TableRow
            android:padding="4dp">
            <EditText
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:layout_width="800dp"
                android:layout_height="40dp"
                android:background="@drawable/text_view_border"
                android:inputType="phone"
                android:id="@+id/guest_phone"
                android:hint="@string/guest_phone"/>
        </TableRow>
        <TableRow
            android:padding="4dp">
            <EditText
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:layout_width="800dp"
                android:layout_height="40dp"
                android:background="@drawable/text_view_border"
                android:id="@+id/guest_welcome_message"
                android:text="@string/welcome_message"/>
        </TableRow>
        <TableRow
            android:padding="4dp">
            <LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp">
                    <Spinner
                        android:layout_width="396dp"
                        android:layout_height="40dp"
                        android:background="@drawable/text_view_border"
                        android:id="@+id/guest_spinner"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:layout_width="396dp"
                        android:layout_height="40dp"
                        android:background="@drawable/text_view_border"
                        android:id="@+id/promo_img_spinner"/>
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/check_guest_in_submit"
        android:text="@string/guest_checkin_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_toEndOf="@+id/tableLayout"
        android:background="@drawable/redbutton"
        android:textColor="@android:color/white" />

</LinearLayout>
