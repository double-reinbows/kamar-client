<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorNavBar"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="@color/guestTextColor"
        android:text="@string/housekeeping_message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/chat_grey" />

        <EditText
            android:id="@+id/housekeeping_message_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/housekeeping_edittext"/>

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/housekeeping_cancel"
            android:text="@string/negative"
            android:background="@drawable/redbutton"
            android:textColor="@android:color/white"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/housekeeping_confirm"
            android:text="@string/positive"
            android:background="@drawable/redbutton"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>


</LinearLayout>