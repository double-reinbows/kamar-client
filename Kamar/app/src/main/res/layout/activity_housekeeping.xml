<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <include layout="@layout/actionbar_restaurant_customview"/>

    <LinearLayout
        android:id="@+id/hk_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="150dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal">


        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/housekeeping_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/housekeeping_section_row" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/roomNumberBackground"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/room_number_text"
            android:text="@string/room_number"
            android:textColor="@color/guestTextColor"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/room_number"
            android:textColor="@color/guestTextColor"
            android:textSize="20sp"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_gravity="center|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="50dp"
            android:id="@+id/logoutIcon"
            android:src="@mipmap/ic_checkout"
            android:contentDescription="logoutIcon"
            android:layout_gravity="right|bottom"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>