<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="800dp"
    android:layout_height="400dp"
    android:gravity="center"
    android:background="@color/dialogConfirmationBackground">


    <ImageView
        android:id="@+id/restaurant_confirmation_dialog_icon"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:src="@drawable/restaurant_confirmation_dialog_icon"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/restaurant_confirmation_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_confirmation_dialog_title"
        android:textColor="@color/guestTextColor"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/restaurant_confirmation_dialog_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/restaurant_confirmation_dialog_desc"
        android:textColor="@color/guestTextColor"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>