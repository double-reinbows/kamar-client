<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="800dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/restaurant_confirmation_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_confirmation_dialog_title"
        android:textColor="@color/guestTextColor"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@color/colorNavBar"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/restaurant_confirmation_dialog_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:text="@string/restaurant_confirmation_dialog_desc"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_below="@+id/restaurant_confirmation_dialog_title"
        android:gravity="center"
        android:lines="2"/>

</RelativeLayout>