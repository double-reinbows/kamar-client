<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hk_img"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/hk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/hk_img"
        android:textSize="17dp"
        android:ellipsize="none"
        android:textColor="@color/black"
        android:maxLines="2"
        android:scrollHorizontally="false"/>
    <LinearLayout
        android:id="@+id/hk_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">
            <include layout="@layout/permintaan_status"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/hk_submit"
        android:layout_alignBottom="@+id/hk_submit"
        android:layout_toLeftOf="@+id/hk_submit"
        android:gravity="center_vertical"/>
    <ImageView
        android:id="@+id/hk_submit"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/button_submit"/>

</RelativeLayout>
