<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/survey_list_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="50dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="none"
    tools:context=".activity.survey.SurveyActivity"
    android:weightSum="1"
    android:layout_gravity="bottom">


    <TextView
        android:id="@+id/survey_row_text"
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="45dp"
        android:layout_alignParentStart="true"
        android:textSize="23sp"
        android:ellipsize="none"
        android:textColor="@color/black"
        android:maxLines="2"
        android:scrollHorizontally="false"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/survey_row_text"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/smiley1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="RadioButton1"
            android:background="@drawable/ic_housekeeping"
            android:button="@android:color/transparent"
            android:tag="1"/>
        <RadioButton
            android:id="@+id/smiley2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="RadioButton2"
            android:tag="2"/>
        <RadioButton
            android:id="@+id/smiley3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="RadioButton3"
            android:tag="3"/>
        <RadioButton
            android:id="@+id/smiley4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="RadioButton4"
            android:tag="4"/>
        <RadioButton
            android:id="@+id/smiley5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="RadioButton5"
            android:tag="5"/>
    </RadioGroup>

</RelativeLayout>