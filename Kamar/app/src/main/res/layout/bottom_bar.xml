<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/roomNumberBackground"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/room_number_text"
        android:text="@string/room_number"
        android:textColor="@color/guestTextColor"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/room_number"
        android:textColor="@color/guestTextColor"
        android:textSize="20sp"
        android:gravity="right"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:id="@+id/logoutIcon"
        android:src="@mipmap/ic_checkout"
        android:contentDescription="logoutIcon" />

</LinearLayout>