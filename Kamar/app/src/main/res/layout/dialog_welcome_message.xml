<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorNavBar"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="@color/guestTextColor"
        android:text="@string/guest_welcome_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/guest_welcome_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/sugarangels" />

        <TextView
            android:id="@+id/guest_welcome_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="26sp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>