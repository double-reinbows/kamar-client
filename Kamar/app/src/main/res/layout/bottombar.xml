<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/bottombar_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/roomNumberBackground"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/room_number_text"
        android:text="@string/room_number"
        android:textColor="@color/guestTextColor"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/room_number"
        android:textColor="@color/guestTextColor"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/room_number_text"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bottombar_guest_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="@color/guestTextColor"/>

    <TextView
        android:id="@+id/bottombar_beta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/logoutIcon"
        android:layout_centerVertical="true"
        android:text="BETA version"
        android:textSize="20sp"
        android:textColor="@color/guestTextColor"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/logoutIcon"
        android:src="@mipmap/ic_checkout"
        android:contentDescription="logoutIcon" />

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

</RelativeLayout>