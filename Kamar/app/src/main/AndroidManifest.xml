        <activity
            android:name=".activity.staff.StaffHomeActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.guest.GuestPermintaanActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/permintaan_title"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
            <!--intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter-->
        </activity>
        <activity
            android:name=".activity.guest.TransportActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/transport_label"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"/>
