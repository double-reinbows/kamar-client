            android:name=".activity.event.GuestEventActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/restaurant_label"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.engineering.EngineeringActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/engineering_label"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"/>
